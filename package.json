{
  "name": "node-typescript-express-mongo-template",
  "version": "1.0.0",
  "description": "A minimalist TypeScript-Express boilerplate",
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "boilerplate",
    "eslint"
  ],
  "author": "Shrujal Shah <shrujal@peerbits.com>",
  "main": "dist/index.js",
  "scripts": {
    "eslint": "eslint \"**/*.ts\"",
    "eslint:fix": "eslint \"**/*.ts\" --fix",
    "postinstall": "chmod +x ./scripts/dev.sh",
    "build": "tsc",
    "dev": "./scripts/dev.sh",
    "start": "node dist/server.js",
    "test": "jest",
    "ts-node": "ts-node src/server.ts",
    "prettier": "prettier --check \"**/*.ts\"",
    "prettier:fix": "prettier --write \"**/*.ts\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "envalid": "^6.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/mongoose": "^5.5.35",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "jest-express": "^1.10.1",
    "mockingoose": "^2.13.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "license": "MIT"
}
